<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <% if logged_in? && current_user.is_admin? %>
      <%= link_to t("header.admin"), "#", id: "logo" %>
    <% else %>
    <%= link_to image_tag("books/logo.png", id: "logo-icon") + t("header.logo"),
      root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right" id="menu-top">
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layout.header.user"), "#admin_users_path" %></li>
            <li><%= link_to t("layout.header.books"),
              "#admin_categories_path" %></li>
            <li><%= link_to t("layout.header.requests"), "#admin_requests_path" %></li>
          <% else %>
            <li><%= link_to t("activity.activities"), "#activities_path" %></li>
            <li><%= link_to t("layout.header.link_categories"),
              books_path %></li>
            <li><%= link_to t("layout.header.requests"), requests_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layout.header.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.header.profile"), current_user %></li>
              <li><%= link_to t("layout.header.setting"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layout.header.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.home"), root_path %></li>
          <li><%= link_to t("header.signup"), signup_path %></li>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav> 
  </div>
</header>